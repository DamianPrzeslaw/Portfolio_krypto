@model Portfolio_Krypto.Models.Token

@{
    ViewData["Title"] = "Edit";
}

<h1>Edycja</h1>

<h2>@Model.tokenName</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="price_buy" class="control-label">Cena kupna</label>
                <input asp-for="price_buy" class="form-control" />
                <span asp-validation-for="price_buy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="amount" class="control-label">Ilość tokenów</label>
                <input asp-for="amount" class="form-control" />
                <span asp-validation-for="amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="date_buy" class="control-label">Data</label>
                <input asp-for="date_buy" class="form-control" />
                <span asp-validation-for="date_buy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-secondary" asp-action="Index">Powrót</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
